<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	.important {
		font-weight: bold;
	}

     .column {
        border: 1px solid #000000;
        text-align: center;
        }
        
     .image {
        text-align: 		left;
		height: 			38px;
		width: 				127px;
		vertical-align: 	baseline;
		background-repeat: 	no-repeat;
		background-size: 	contain;
		}
		
	.ui-padding {
		margin-right:		30px;
		margin-top: 		10px;
		}
		
		
	.footer {
		margin-top:			10px;
		margin-right:		30px;	
		position:			fixed;
		bottom:				0px;

		}
    </ui:style>
		
		
	<b:Container fluid="true">
		
<!-- ROW#1 - Header logo -->
		<b:Row>
			<b:Column addStyleNames="{style.ui-padding}" size="XS_12" > 
				<b:Panel>
					<b:PanelBody>
						 <b:Image addStyleNames="{style.image}" url="images/kura_logo_small.png"/>
					</b:PanelBody>
				</b:Panel>					
			</b:Column> 
		</b:Row>
		
		
<!-- ROW#2 content-->
		<b:Row>	
			<b:Column size="MD_12">	
				<b:Panel>
					<b:PanelBody>
						<b:Column size="MD_3">
							<b:Row>
								<b:Column size="MD_12">
									<b:Panel>
										<b:PanelHeader>
											<b:Heading size="H3" text="System"/>	
										</b:PanelHeader>
										<b:PanelBody>
											<b.html:Strong text="Available system choices"/>
										</b:PanelBody>
									</b:Panel>
									
								</b:Column>								
							</b:Row>
							<b:Row>
								<b:Column size="MD_12">
									<b:Panel>
										<b:PanelHeader>
											<b:Heading size="H3" text="Services"/>	
										</b:PanelHeader>
										<b:PanelBody>
											<b.html:Strong text="Available Services"/>
										</b:PanelBody>
									</b:Panel>
									
								</b:Column>								
							</b:Row>
						</b:Column>
			
						<b:Column size="MD_9">
							<b:Panel>
								<b:PanelHeader>
									<b:Heading size="H3" text="**dynamically generated??**"/> 
								</b:PanelHeader>
								<b:PanelBody>
									<b.html:Strong text="Content here"/>
								</b:PanelBody>
							</b:Panel>							
						</b:Column>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>
		
		
<!-- ROW3 (Footer) Content -->
		<b:Row >
			<b:Column addStyleNames="{style.footer}" size="MD_12">
				<b:Panel>
					<b:PanelFooter>
						<b:Row>
							<b:Column size="MD_8" >															
								<b.html:Paragraph alignment="LEFT" >
									<g:Label ui:field='footerLeft' text="Footer Left" />
								</b.html:Paragraph>								
							</b:Column>							
							<b:Column size="MD_4">
								<b.html:Paragraph alignment="RIGHT">
									<g:Label ui:field='footerRight' text="Footer Right" />
								</b.html:Paragraph>
							</b:Column>
						</b:Row>
					</b:PanelFooter>				
				</b:Panel>										
			</b:Column>
		</b:Row>

		
	</b:Container>	
</ui:UiBinder> 